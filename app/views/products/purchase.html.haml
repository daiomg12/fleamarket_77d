.main
  .header
    = link_to image_tag('material/logo/logo.png', class: "logo"), "/"
  .main__box

    %section.main__box__title
      会員情報入力
    %section.Product-information
      .Product-information-box
        .image
          = image_tag @products.product_images[0].src.url, class:'pickupproduct-image'
        .comment
          %p.com
            = @products.name
          %p.com2
            = @products.pricing
            （税込) 送料込み
    %section.payment
      .payment-box
        .cSGTly
          %span 支払い金額
          %span.jYZlcv 
            ¥
            = @products.pricing
        .jReTKH
          %label{:for => "point-checkbox-id"}
            %span.kRgxCd
              ポイントを使用（所持ポイント: P0）
    %section.payment-methods
      .comment
        .comment1
          %h3 支払い方法
        %a.hJNIGG{:href => "/cards/new"}
          %svg{"aria-hidden" => "true", :fill => "#0095ee", "fill-rule" => "evenodd", :height => "16", :viewbox => "0 0 24 24", :width => "16"}
            %path{:d => "M17.51,11.3H12.7v-5a.7.7,0,0,0-1.4,0v5h-5a.7.7,0,0,0,0,1.4h5v4.81a.7.7,0,0,0,1.4,0V12.7h4.81a.7.7,0,0,0,0-1.4Z"}
            %path{:d => "M12,2A10,10,0,1,0,22,12,10,10,0,0,0,12,2Zm0,18.6A8.6,8.6,0,1,1,20.6,12,8.61,8.61,0,0,1,12,20.6Z"}
          %span 登録してください
    %section.Shipping
      .box
        .dVXrhZ
          %h3 配送先
          %a.sc-SFOxd.dZdLmH{:href => "/users/:id/edit"} 変更する
        .comment
          %p 
          = "〒 " + "#{@address.postal_code}"
          %p
          = @address.prefecture_id
          %p  
          = @address.city
          %p
          = @address.firstname
          = @address.lastname  
    %section.comment
      .comment1
        .comment2 
          - if (current_user.card)
            .comment3
              =link_to "購入する", credit_card_path(@products.id), method: :post 
          - else 
            決済方法を登録してください  
  #footer
    .footer-box
      %ul
        %li
          %a{:href => "/jp/privacy/"} プライバシーポリシー
        %li
          %a{:href => "/jp/tos/"} 利用規約
        %li
          %a{:href => "/jp/tokutei/"} 特定商取引に関する表記
    %a
      = image_tag ('material/logo/logo.png'), class: "logo"